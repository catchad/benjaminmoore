mixin level(data)
	ul(class="level")
		each item in data
			li(class="level__item")
				a(class="level__link" href="/product/page1")
					div(class="level__sticker")  #{item.sticker}
					img(class="level__img" src="/assets/images/#{item.url}.png")
					h3(class="level__eng") #{item.title}
					p(class="level__chi") #{item.name}

mixin space(data)
	ul(class="space")
		each item in data
			li(class="space__item")
				a(class="space__link" href="/findcolor/draw.html?#{item.link}")
					div(class="space__imgTextContainer")
					div(class="space__textBox")
						h2(class="space__title") #{item.title}
						p(class="space__text") #{item.text}
					div(class="space__background")


