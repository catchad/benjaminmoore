mixin gallery(data)
	ul(class="gallery")
		each item in data
			li(class="gallery__item")
				a(class="gallery__link" href="#{item.link}")
					div(class="gallery__thumbnail", style="background-image: url('#{item.img}')")
					div(class="gallery__caption")
						p(class="gallery__title") #{item.title}
						p(class="gallery__text") #{item.text}




