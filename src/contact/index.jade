extends /jadeTemplate/_layout.jade

block variables
	- var pageTitle = "聯絡我們";

block style
	link(rel="stylesheet", href="/assets/styles/contact.css")
	link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
block body
	main(class="dsLayout")
		div(class="dsLayout__wrapper")
			section(class="section")
				div(class="dsLayout__fixedImgContainer dsLayout__fixedImgContainer--active")
					img(class="dsLayout__fixedImg " src="/assets/images/test1.jpg", alt="")
				div(class="title")
					p(class="title__name") Contact us
					p(class="title__description") 班傑明·摩爾 (台灣)
				div(class="section__heading") 大直旗艦店
				div(class="section__text") 
					ul(class="information")
						li(class="information_text")
							|104台北市中山區敬業一路128巷39號
							i(class="information__icon fa fa-map-marker" aria-hidden="true")
						li(class="information_text") 0800-627-000
						li(class="information_text") Email:bm@sensedesign.com.tw
						li(class="information_text")
							i(class="information__icon fa fa-facebook-official" aria-hidden="true")
							span(class="information__link") 班傑明摩爾粉絲團
						li(class="information_text")
							i(class="information__icon fa fa-instagram" aria-hidden="true")
							span(class="information__link") 班傑明摩爾instagram
block script

