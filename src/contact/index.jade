extends /jadeTemplate/_layout.jade

block variables
	- var pageTitle = "聯絡我們";
	- var pageClassName = "contact";

block style
	link(rel="stylesheet", href="/assets/styles/contact.css")
	link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
block body
	main(class="dsLayout")
		div(class="dsLayout__wrapper")
			section(class="section")
				div(class="dsLayout__fixedImgContainer dsLayout__fixedImgContainer--active")
					img(class="dsLayout__fixedImg " src="/assets/images/contact.jpg", alt="")
